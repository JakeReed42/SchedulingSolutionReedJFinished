@model IEnumerable<Instructor>
@{
    ViewData["Title"] = "AddInstructorToOffering";
}

<h4>AddInstructorToOffering</h4>

<br />
<br />


@if (Model.Count() == 0)
{
    <h2>No Viable Instructors to teach this course</h2>
}


else
{
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Instructor Name</th>
            <th>Instructor Email</th>
            <th></th>
        </tr>    
    </thead>

    <tbody>
        @foreach (Instructor eachQualifiedInstructor in Model)
        {
            var FullName = eachQualifiedInstructor.InstructorFirstName + " " + eachQualifiedInstructor.InstructorLastName; 
        <tr>
            <td>@FullName</td>
            <td>@eachQualifiedInstructor.InstructorEmail</td>
            
          
                @if (User.IsInRole("Chair"))
                {
            <td>
                <a class="btn btn-success" asp-action="ConfirmAddition" asp-controller="CourseOfferings" asp-route-id="@eachQualifiedInstructor.InstructorID"> Add @eachQualifiedInstructor.InstructorLastName to offering</a>
            </td>
                }
            
        </tr>
        }
    </tbody>

</table>
}@*end of else*@