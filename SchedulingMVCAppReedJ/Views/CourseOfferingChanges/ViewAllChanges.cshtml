@model IEnumerable<CourseOfferingChanges>
@{
    ViewData["Title"] = "ViewAllChanges";
}

<h2>View All Changes</h2>

@if (Model.Count() == 0)
{
    <h2>No Changes have been made</h2>
}

else
{

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Changer Name</th>
                <th>Changer Role</th>
                <th>Change Type</th>
                <th>Date and Time Changed</th>
                <th>CRN</th>
                <th>Course Number</th>
                <th>Course Name</th>
                <th>Department Name</th>
                <th>Instructor Name</th>
                <th>Days</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Course Start Date</th>
            </tr>
        </thead>

        @foreach (CourseOfferingChanges eachofferingChanges in Model)
        {
        <tbody>
            <tr>
                <td>@eachofferingChanges.ChangerName</td>
                <td>@eachofferingChanges.ChangerRole</td>
                <td>@eachofferingChanges.ChangeType</td>
                <td>@eachofferingChanges.DateAndTimeOfChange</td>
                <td>@eachofferingChanges.CRN</td>
                <td>@eachofferingChanges.Course.CourseNumber</td>
                <td>@eachofferingChanges.Course.CourseName</td>
                <td>@eachofferingChanges.Course.Department.DepartmentName</td>
                <td>@eachofferingChanges.Instructor.InstructorFullName</td>
                <td>@eachofferingChanges.Days</td>
                <td>@eachofferingChanges.StartTime</td>
                <td>@eachofferingChanges.EndTime</td>
                <td>@eachofferingChanges.StartDate</td>
            </tr>
        </tbody>

        }
    </table>


}